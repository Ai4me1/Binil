# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PRIVATE_KEY=your_base58_private_key_here

# Database Configuration
DATABASE_URL=./data/bot.sqlite

# API Configuration
API_PORT=3000
API_SECRET=your_secure_api_secret_key_min_16_chars

# Bot Configuration
MAX_PORTFOLIO_SIZE=500000
MAX_POSITION_SIZE=50000

# Risk Management
IL_WARNING_THRESHOLD=0.02
IL_ACTION_THRESHOLD=0.05
IL_CRITICAL_THRESHOLD=0.10
IL_EMERGENCY_THRESHOLD=0.20
MAX_VOLATILITY_THRESHOLD=0.50
MAX_DRAWDOWN_THRESHOLD=0.20

# Strategy Configuration
BALANCED_LIQUIDITY_ENABLED=true
DCA_STRATEGY_ENABLED=true
MARKET_MAKING_ENABLED=false

# Monitoring
ENABLE_ALERTS=true
SLACK_WEBHOOK_URL=your_slack_webhook_url
LOG_LEVEL=info

# Pool Configuration (comma-separated)
TARGET_POOLS=pool_address_1,pool_address_2

# Performance Targets
TARGET_APY=0.20
MIN_LIQUIDITY_USD=10000
MAX_SPREAD_PERCENTAGE=0.05